<h1>BURGER PARADISE!</h1>

<img src="assets/img/burger2.png" class="rounded mx-auto d-block" style="margin-top:25px;margin-bottom:25px" alt="Funny Burger">

<h2>Orders</h2><br>

<div class="row">
  <div class="col-lg-4">
    <h3>Add Burger</h3>
    <form class="create-form">

      <div class="form-group">
        <input placeholder="Enter the name" class="form-control form-control-lg" type="text" id="bu" name="name">
      </div>
      <button type="submit" class="btn btn-info btn-lg">Add Burger</button>
    </form>
  </div>
  <div class="col-lg-4">
    <h3>Ready to Eat Burgers</h3>
    <table class="table table-striped table-bordered">
      {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devour=true}} {{/unless}} {{/each}}
    </table>
  </div>
  <div class="col-lg-4">
    <h3>Served Burgers</h3>
    <table class="table table-striped table-bordered">
      {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devour=false}} {{/if}} {{/each}}
    </table>
  </div>
</div>